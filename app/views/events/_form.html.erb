<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :sport %>
    <%= form.select :sport_id, Sport.all.pluck(:name, :id)%>
  </div>

  <div class="field">
    <%= form.label :min_age %>
    <%= form.number_field :min_age %>
  </div>

  <div class="field">
    <%= form.label :max_age %>
    <%= form.number_field :max_age %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :participant %>
    <%= form.number_field :participant %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
